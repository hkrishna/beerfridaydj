<section id="users">
  <div class="page-header">
    <h3><%= @user.display_name %></h3>
  </div>
  <div class="row">
    <div class="span16 columns">
      <ul class="unstyled">
      <%- @user.videos.each do |video| %>
      <li class="video-block">
        <%= image_tag(video.thumbnail, :class => 'video-thumbnail') %>
        <div class="user-name"><%= video.title %>
          <%- if video.user == @logged_in_user %>
            <%= link_to('Delete', video_path(video), :method => :delete) %>
          <%- end %>
        </div>
      </li>
      <%- end %>
      </ul>
    </div>
  </div>
</section>
