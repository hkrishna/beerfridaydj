<section id="users">
  <div class="page-header">
    <h3><%= @user.display_name %>'s music</h3>
  </div>
  <div class="row">
    <div class="span16 columns">
      <ul class="unstyled">
      <%- @user.videos.each do |video| %>
      <li class="video-block">
        <%= link_to(image_tag(video.thumbnail, :class => 'video-thumbnail'), "http://www.youtube.com/watch?v=#{video.youtube_id}", :target => "_blank" ) %>
        <div class="user-name">
          <div class="video-title">
            <%= video.title %>
          </div>
          <%- if video.user == @logged_in_user %>
            <%= link_to('Delete', video_path(video), :method => :delete) %>
          <%- end %>
        </div>
      </li>
      <%- end %>
      </ul>
    </div>
  </div>
</section>
