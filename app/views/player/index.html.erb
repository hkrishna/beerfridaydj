<section id="player_container">
  <div class="page-header">
    <h3>Let's Party!</h3>
  </div>
  <div class="row">
    <div id="player" class="span8">
      <%= button_to_function('Hit it!', 'playNext()', :class => "btn primary") %>
    </div>
    <div id="user-list_container" class="span8">
      <h5>
        Party People
      </h5>
      <form class="form-stacked">
        <ul class="unstyled">
        <%- @users.each do |user| %>
          <li class="adjustHeight span4">
            <div class="input-prepend">
              <label class="add-on active spl"><%= check_box_tag(user.display_name, user.id, true, :onclick => "toggleClass(this)") %></label>
              <%= label_tag(user.display_name, truncate(user.display_name, :length => 20), :class => "adjustPosition") %>
            </div>
          </li>
        <%- end %>
        </ul>
      </form>
    </div>
  </div>
</section>