<!DOCTYPE html>
<html>
<head>
  <title>Beer Friday DJ</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js' %>
  <%= csrf_meta_tag %>
</head>
<body>
<%- if @logged_in_user %>
  <div id="greeting">
    You're signed in as <%= @logged_in_user.email %>.
    <%= link_to('Sign out?', session_path(@logged_in_user.id), :method => :delete) %>
  </div>

  <div id="add-video">
    <%= form_tag(:controller => :videos, :action => :create) %>
      <%= label_tag('url') %>
      <%= text_field_tag('url') %>
      <%= submit_tag('Add video!') %>
      You should be adding lots of videos.
    </form>
  </div>
<%- else %>
  <%= form_tag(:controller => :sessions,:action => :create) %>
    <%= label_tag('email') %>
    <%= email_field_tag('email') %>
    <%= submit_tag('Sign in!') %>
  </form>
<%- end %>

<%= yield %>

</body>
</html>
