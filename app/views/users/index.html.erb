<section id="users">
  <div class="page-header">
    <h3>Users</h3>
  </div>
  <div class="row">
    <div class="span16 columns">
      <ul class="unstyled">
      <%- @users.each do |user| %>
      <li class="span3 columns">
        <h5 class="user-name">
          <div class="name_container float-left">
            <%= link_to(truncate(user.display_name, :length => 18), user_path(user)) %>
          </div>
          <small class="video-count">[<%= user.videos.size %>]</small>
        </h5>
      </li>
      <%- end %>
      </ul>
    </div>
  </div>
</section>
